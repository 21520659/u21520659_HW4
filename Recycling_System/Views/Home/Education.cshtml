
<style>
    .center {
        display: flex;
        justify-content: center;
        align-items: center;
        border: green 2px solid;
        border-radius: 5px;
        margin: 50px 300px 50px 300px;
        padding: 20px;
        
    }

    
</style>
<div class="center">
    @using (Html.BeginForm("Education", "Home", FormMethod.Post))
    {
        <form>
            <H3 style="color:green">Education</H3>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                </div>
                <input name="sponsor" class="form-control" placeholder="Sponsor" type="text">
            </div>
            <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        
                    </span>
                </div>
                <input name="duration" class="form-control" placeholder="Duration " type="number">
            </div> <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    
                </div>

                <input name="donation" class="form-control" placeholder="Donation" type="number">
            </div> <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        
                    </span>
                </div>
                <select class="form-control" name="EducationType">
                    <option value="Task Category">Task Category</option>
                    <option value="Literacy Tasks">Literacy Task</option>
                    <option value="Mathematics Tutouring">Mathematics Tutouring</option>
                    <option value="Robotics Coding">Robotics Coding</option>
                    <option value="Science">Science</option>

                </select>
            </div> <!-- form-group end.// -->

            <div class="form-group input-group">
                <div class="input-group-prepend">
                    
                </div>
                <input class="form-control" placeholder="SchoolName" type="text" name="schoolName">
            </div>
            <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                       


                    </span>
                </div>
                <select class="form-control" name="schoolGrade">
                    <option value="None">School Grade</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                </select>
            </div> <!-- form-group end.// -->
            <input type="submit" class="btn btn-success" value="Submit"/>
        </form>
    }


</div>
   
